{
  "name": "fastify-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "migrate:up": "node-pg-migrate up -m ./migrations -d \"postgres://${PGUSER}:${PGPASSWORD}@${PGHOST}:${PGPORT}/${PGDATABASE}\"",
    "migrate:down": "node-pg-migrate down -m ./migrations -d \"postgres://${PGUSER}:${PGPASSWORD}@${PGHOST}:${PGPORT}/${PGDATABASE}\"",
    "migrate:status": "node-pg-migrate status -m ./migrations -d \"postgres://${PGUSER}:${PGPASSWORD}@${PGHOST}:${PGPORT}/${PGDATABASE}\""
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "fastify": "^5.5.0",
    "pg": "^8.12.0",
    "node-pg-migrate": "^8.0.3"
  }
}
